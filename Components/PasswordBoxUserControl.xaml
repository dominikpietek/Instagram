<UserControl x:Class="Instagram.Components.PasswordBoxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Instagram.Components"
             mc:Ignorable="d">
    <PasswordBox x:Name="PasswordBoxName" PasswordChanged="Password_PasswordChanged" Padding="10" VerticalAlignment="Center" Height="40">
        <PasswordBox.ToolTip>
            <Label Content="Enter your password"/>
        </PasswordBox.ToolTip>
    </PasswordBox>
</UserControl>
