<UserControl x:Class="Instagram.Components.MessengerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Instagram.Components"
             mc:Ignorable="d" >
    <Grid>
        <Label Content="You have no friends :(" FontSize="22" FontWeight="Black"/>
        <ItemsControl ItemsSource="{Binding MessengerSource, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Background="White">
        </ItemsControl>
    </Grid>
</UserControl>
